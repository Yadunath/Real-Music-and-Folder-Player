<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trialvynscloudup.equalizer.EqualizerFragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways" />
<android.support.percent.PercentRelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Preset"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:textSize="@dimen/equalizer_text_size"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/textView8"

        />
    
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:layout_below="@+id/spinner"
        app:layout_marginTopPercent="4%"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toLeftOf="@+id/textView10"
        android:max="100"
        android:progress="50"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-15db"
        android:id="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/seekBar2"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+15db"
        android:id="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/seekBar2"
        app:layout_marginLeftPercent="1%"
        app:layout_marginRightPercent="1%"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:layout_below="@+id/seekBar2"
        android:layout_alignLeft="@+id/seekBar2"
        android:layout_alignRight="@+id/seekBar2"
        app:layout_marginTopPercent="4%"
        android:max="100"
        android:progress="50"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-15db"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/seekBar3"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+15db"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/seekBar3"
        app:layout_marginLeftPercent="1%"
        app:layout_marginRightPercent="1%"/>
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar4"
        android:layout_below="@+id/seekBar3"
        android:layout_alignLeft="@+id/seekBar2"
        android:layout_alignRight="@+id/seekBar2"
        app:layout_marginTopPercent="4%"
        android:max="100"
        android:progress="50"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-15db"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/seekBar4"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+15db"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/seekBar4"
        app:layout_marginLeftPercent="1%"
        app:layout_marginRightPercent="1%"/>
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar5"
        android:layout_below="@+id/seekBar4"
        android:layout_alignLeft="@+id/seekBar2"
        android:layout_alignRight="@+id/seekBar2"
        app:layout_marginTopPercent="4%"
        android:max="100"
        android:progress="50"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-15db"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/seekBar5"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+15db"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/seekBar5"
        app:layout_marginLeftPercent="1%"
        app:layout_marginRightPercent="1%"/>
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar6"
        android:layout_below="@+id/seekBar5"
        android:layout_alignLeft="@+id/seekBar2"
        android:layout_alignRight="@+id/seekBar2"
        app:layout_marginTopPercent="4%"
        android:max="100"
        android:progress="50"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-15db"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/seekBar6"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+15db"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/seekBar6"
        app:layout_marginLeftPercent="1%"
        app:layout_marginRightPercent="1%"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bass Boost"
        android:id="@+id/textView11"
        android:layout_above="@+id/seekBar7"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        app:layout_marginBottomPercent="1%"

        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar7"
        android:layout_alignParentBottom="true"
        app:layout_marginLeftPercent="14%"
        app:layout_marginRightPercent="15%"

        />
</android.support.percent.PercentRelativeLayout>




</RelativeLayout>
